terraform{
    required_providers {
        aws = {
            source = "hashicorp/aws"
            version = "~> 3.5.0"
        }
    }
}

provider "aws" {
  region = "us-****-1"
}

resource "aws_budgets_budget" "bill" {
  name              = "monthly-budget"
  budget_type       = "COST"
  limit_amount      = "200"
  limit_unit        = "USD"
  time_unit         = "MONTHLY"
  time_period_start = "2024-08-01_00:00"
}